/* General Styles */
/* Set the default font family and size for all widgets */
QWidget {
    font-family: 'Segoe UI';  /* Default font family */
    font-size: 13px;          /* Default font size */
}

/* Specific Widget Styles */

/* Style for the main action buttons */
#saveButton,
#deleteButton,
#cancelButton,
#changeImageButton,
#deleteImageButton,
#addRelationshipButton,
#addPropertyButton {
    background-color: white;      /* Button background color */
    border: 1px solid #ddd;       /* Light gray border */
    border-radius: 4px;           /* Rounded corners */
    padding: 5px 15px;            /* Padding inside the button */
    color: black;                 /* Text color */
}


#deleteButton {
    background-color: #A00E0E;    /* Red color for delete button */
}

/* Hover effect for the action buttons */
#saveButton:hover,
#deleteButton:hover,
#cancelButton:hover,
#changeImageButton:hover,
#deleteImageButton:hover,
#addRelationshipButton:hover,
#addPropertyButton:hover {
    background-color: #e9ecef;    /* Slightly darker background on hover */
}

/* Pressed state for the action buttons */
#saveButton:pressed,
#deleteButton:pressed,
#cancelButton:pressed,
#changeImageButton:pressed,
#deleteImageButton:pressed,
#addRelationshipButton:pressed,
#addPropertyButton:pressed {
    background-color: #dee2e6;    /* Even darker background when pressed */
}

/* Disabled state for specific buttons */
#saveButton:disabled,
#deleteButton:disabled,
#cancelButton:disabled {
    background-color: #e9ecef;    /* Background color when disabled */
    color: #6c757d;               /* Text color when disabled */
    /* You can add more styles for disabled state here */
}

/* Styles for input fields */
#nameInput,
#descriptionInput,
#labelsInput,
#tagsInput {
    border: 1px solid #ccc;       /* Light gray border */
    border-radius: 4px;           /* Rounded corners */
    padding: 5px;                 /* Padding inside the input */
    background: white;            /* Input background color */
}

/* Focus state for input fields */
#nameInput:focus,
#descriptionInput:focus,
#labelsInput:focus,
#tagsInput:focus {
    border-color: #007bff;        /* Blue border when focused */
    /* You can modify the focus border color here */
}

/* Style for the progress bar */
#progressBar {
    border: 1px solid #ccc;       /* Border around the progress bar */
    border-radius: 4px;           /* Rounded corners */
    text-align: center;           /* Center the text inside the progress bar */
    background: white;            /* Background color */
}

/* Style for the progress bar chunk (the filled part) */
#progressBar::chunk {
    background-color: #007bff;    /* Blue color for the progress */
    /* You can change the progress color here */
}

/* Style for the status label */
#statusLabel {
    color: #212529;               /* Text color */
    background: transparent;      /* Transparent background */
    /* You can adjust the font style or size here */
}

/* Group box styling for the image section */
#imageGroupBox {
    border: 1px solid #ccc;       /* Border around the group box */
    border-radius: 4px;           /* Rounded corners */
    margin-top: 1em;              /* Top margin */
    padding-top: 10px;            /* Top padding inside the group box */
    background: white;            /* Background color */
}

/* Style for the image label inside the group box */
#imageLabel {
    border: 1px solid #ccc;       /* Border around the image label */
    border-radius: 4px;           /* Rounded corners */
    background: white;            /* Background color */
    /* You can adjust the size or alignment of the image here */
}

/* Styles for the relationships and properties tables */
#relationshipsTable,
#propertiesTable {
    background: white;            /* Table background color */
    /* You can add more styles for table headers, cells, etc. */
}

/* Style for the tree view */
#treeView {
    background: white;            /* Background color */
    border: 1px solid #ccc;       /* Border around the tree view */
    border-radius: 4px;           /* Rounded corners */
    /* You can customize item selection, text color, etc., here */
}

/* Styles for the main tabs */
#mainTabs::pane {
    background: white;            /* Background color of the tab pane */
    border: 1px solid #ccc;       /* Border around the tab pane */
    border-radius: 4px;           /* Rounded corners */
}

/* Style for each tab in the tab bar */
#mainTabs QTabBar::tab {
    background-color: white;          /* Background color of the tab */
    border: 1px solid #ccc;           /* Border around the tab */
    border-bottom-color: white;       /* Hide the bottom border to blend with the pane */
    border-top-left-radius: 4px;      /* Rounded top-left corner */
    border-top-right-radius: 4px;     /* Rounded top-right corner */
    padding: 5px 10px;                /* Padding inside the tab */
    margin-right: 2px;                /* Space between tabs */
}

/* Style for the selected tab */
#mainTabs QTabBar::tab:selected {
    background-color: white;          /* Background color for the selected tab */
    border-bottom-color: transparent; /* Remove bottom border to connect with the tab pane */
}

/* Style for unselected tabs */
#mainTabs QTabBar::tab:!selected {
    background-color: #f0f0f0;        /* Slightly darker background for unselected tabs */
    margin-top: 2px;                  /* Push unselected tabs down to create a visual hierarchy */
}

/* Hover effect for unselected tabs */
#mainTabs QTabBar::tab:!selected:hover {
    background-color: #e9ecef;        /* Change background color on hover */
}

/* Central widget background */
#CentralWidget {
    background-color: transparent;    /* Make central widget transparent */
    /* This allows any background image or color of the main window to show through */
}

