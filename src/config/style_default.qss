/* You can add more custom styles below as needed */

/* Remove border and padding for the delete button column */
#relationshipsTable QTableWidget::item {
    border: none;
    padding: 0;
}

#propertiesTable QTableWidget::item {
    border: none;
    padding: 0;
}

/* Remove border and padding for the delete button itself */
#relationshipsTable QPushButton#rowDeleteButton,
#propertiesTable QPushButton#rowDeleteButton {
    color: white;
    border: none;
    border-radius: 4px;
    padding: 5px;
    background: #A00E0E;
}

/* Style for the depth spinbox */
#depthSpinBox {
    border: 1px solid #ccc;       /* Light gray border */
    border-radius: 4px;           /* Rounded corners */
    padding: 5px;                 /* Padding inside the spinbox */
    background: white;            /* Spinbox background color */
}

#depthSpinBox::up-button {
    width: 30px;
    height: 20px;
}

#depthSpinBox::down-button {
    width: 30px;
    height: 20px;
}

#depthSpinBox:focus {
    border-color: #007bff;        /* Blue border when focused */
}

/* Style for relationship properties */
.relationship-property {
    background-color: #f0f0f0;    /* Light gray background */
    border-radius: 4px;           /* Rounded corners */
    padding: 5px;                 /* Padding inside the property */
    margin: 2px;                  /* Margin around the property */
}

/* Style for QGroupBox in SuggestionDialog */
QGroupBox {
    font-weight: bold;
    margin-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 3px;
}

QCheckBox {
    spacing: 5px;
}

QLabel {
    color: gray;
    font-size: 11px;
}